<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#EFEFEF">

    <EditText
        android:id="@+id/et_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="8dp"
        android:padding="8dp"
        android:hint="@string/search_hint"
        android:textSize="14sp"
        android:layout_toStartOf="@id/btn_cancel"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@id/btn_cancel"
        android:layout_alignBottom="@id/btn_cancel"
        android:drawableStart="@drawable/icon_top_search"
        android:drawablePadding="3dp"
        android:background="@drawable/bg_search_text"
        android:inputType="text"
        android:maxLines="1"/>

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cancel"
        android:textColor="#E5AC6A"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="5dp"
        android:background="#EFEFEF"
        style="?android:attr/borderlessButtonStyle"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_search"
        android:layout_below="@id/et_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />
</RelativeLayout>