<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="#FAFAFA"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/tv_time_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/iv_center_image"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:textSize="12sp"
        android:textColor="@color/weak_word_gray"
        android:gravity="center"
        tools:text="冥想"/>

    <View
        android:id="@+id/view_line_vertical"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:background="@color/line_gray"
        android:layout_centerHorizontal="true"/>

    <View
        android:id="@+id/view_line_horizontal"
        android:layout_width="5dp"
        android:layout_height="1dp"
        android:background="@color/line_gray"
        android:layout_toEndOf="@id/iv_center_image"
        android:layout_centerVertical="true"
        android:layout_marginStart="3dp"/>

    <TextView
        android:id="@+id/tv_right_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/iv_center_image"
        android:layout_toStartOf="@id/iv_right_image"
        android:layout_centerVertical="true"
        android:gravity="center"
        tools:text="冥想"/>


    <ImageView
        android:id="@+id/iv_center_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        tools:src="@drawable/shape_circle"
        tools:ignore="ContentDescription" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_right_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="5dp"
        tools:ignore="ContentDescription" />

</RelativeLayout>